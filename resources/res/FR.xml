<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center" android:layout_gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
        <com.github.florent37.singledateandtimepicker.widget.WheelDayPicker android:id="@+id/daysPicker" android:paddingLeft="5dp" android:paddingRight="5dp" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="3" app:wheel_atmospheric="true" app:wheel_item_align="2"/>
        <com.github.florent37.singledateandtimepicker.widget.WheelDayOfMonthPicker android:id="@+id/daysOfMonthPicker" android:paddingLeft="5dp" android:paddingRight="5dp" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="2" app:wheel_atmospheric="true" app:wheel_item_align="2"/>
        <com.github.florent37.singledateandtimepicker.widget.WheelMonthPicker android:id="@+id/monthPicker" android:paddingLeft="5dp" android:paddingRight="5dp" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="3" app:wheel_atmospheric="true" app:wheel_item_align="2"/>
        <com.github.florent37.singledateandtimepicker.widget.WheelYearPicker android:id="@+id/yearPicker" android:paddingLeft="5dp" android:paddingRight="15dp" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="2" app:wheel_atmospheric="true" app:wheel_item_align="2"/>
        <com.github.florent37.singledateandtimepicker.widget.WheelHourPicker android:id="@+id/hoursPicker" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" app:wheel_atmospheric="true" app:wheel_item_align="0"/>
        <com.github.florent37.singledateandtimepicker.widget.WheelMinutePicker android:id="@+id/minutesPicker" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" app:wheel_atmospheric="true" app:wheel_item_align="0"/>
        <com.github.florent37.singledateandtimepicker.widget.WheelAmPmPicker android:id="@+id/amPmPicker" android:paddingLeft="10dp" android:paddingRight="5dp" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" app:wheel_atmospheric="true" app:wheel_item_align="0" app:wheel_visible_item_count="2"/>
    </LinearLayout>
    <View android:layout_gravity="center_vertical" android:id="@+id/dtSelector" android:background="@color/picker_default_selector_color" android:layout_width="match_parent" android:layout_height="@dimen/wheelSelectorHeight" android:alpha="0.2"/>
    <RelativeLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="@dimen/wheelSelectorHeight">
        <View android:id="@+id/picker_divider_1" android:background="@drawable/picker_default_divider" android:layout_width="match_parent" android:layout_height="@dimen/picker_default_divider_height" android:layout_alignParentTop="true"/>
        <View android:id="@+id/picker_divider_2" android:background="@drawable/picker_default_divider" android:layout_width="match_parent" android:layout_height="@dimen/picker_default_divider_height" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</FrameLayout>
