    <View android:id="@+id/title" android:background="#dddddd" android:layout_width="150dp" android:layout_height="10dp" android:layout_marginBottom="10dp"/>
    <View android:id="@+id/subtitle" android:background="#dddddd" android:layout_width="100dp" android:layout_height="8dp" android:layout_marginBottom="10dp" android:layout_below="@+id/title"/>
